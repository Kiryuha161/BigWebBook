@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6 mb-3" style="height: 60vh; overflow: auto;">
                <div class="card h-100">
                    <img class="card-img-top h-50 border border-5 rounded" src="@product.ImageUrl" alt="Карточка книги">
                    <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title text-primary h-5 mt-2 mb-2 ml-2 text-uppercase">@product.Title</p>
                            <p class="card-title text-warning mb-2 ml-2">@product.Author</p>
                            <p class="card-title text-secondary mb-2 ml-2">@product.CategoryName.Name</p>
                        </div>
                        <div class="pl-1">
                            <p class="mt-2 mb-2 ml-2">Старая цена: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                            <p class="bg-body-secondary mt-2 mb-2 ml-2">Новая цена: <span>@product.Price.ToString("c")</span></p>
                        </div>
                    </div>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">Подробнее</a>
                </div>
        </div>
    }
</div>

