@model BigWeb.Models.Category

<partial name="_Notification" />

<div class="container">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Удаление категории</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <input asp-for="Id" hidden />

        <div class="mb-3">
            <form method="post" asp-controller="Category" asp-action="Delete">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled/>
                </div>
                <div class="mb-3">
                    <label asp-for="DisplayOrder"></label>
                    <input asp-for="DisplayOrder" class="form-control" disabled/>
                </div>
                <input type="submit" class="btn btn-danger" value="Удалить" />
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Назад к списку</a>
            </form>
        </div>
    </div>
</div>

